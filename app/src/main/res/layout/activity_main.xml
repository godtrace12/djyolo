<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btnPicDetect"
        android:text="ncnn图片手势"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <Button
        app:layout_constraintLeft_toRightOf="@id/btnPicDetect"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btnCamera"
        android:layout_marginLeft="20dp"
        android:text="ncnn摄像头"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_mp_hands"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPicDetect"
        android:layout_width="wrap_content"
        android:text="mediapipe-手势"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_mp_face"
        app:layout_constraintLeft_toRightOf="@id/btn_mp_hands"
        app:layout_constraintTop_toBottomOf="@id/btnPicDetect"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="mediapipe-人脸"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_yolo_tflite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_mp_hands"
        android:layout_width="wrap_content"
        android:text="yolo-tflite"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>